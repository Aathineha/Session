package com.example.sbi.service;

import org.springframework.stereotype.Service;
import org.springframework.web.client.RestTemplate;
import org.springframework.http.ResponseEntity;
import org.springframework.beans.factory.annotation.Autowired;
import com.example.sbi.model.DeviceDTO;
import java.util.HashMap;
import java.util.Map;
import java.util.UUID;

@Service
public class DeviceCredentialService {

    private final RestTemplate restTemplate = new RestTemplate();
    private final String CONFIG_MGMT_URL = "http://config-host:port/api/devices"; // Replace with actual URL

    @Autowired
    private SessionService sessionService;

    public Map<String, String> loginAllDevices() {
        Map<String, String> sessionMap = new HashMap<>();

        try {
            ResponseEntity<DeviceDTO[]> response = restTemplate.getForEntity(CONFIG_MGMT_URL, DeviceDTO[].class);
            DeviceDTO[] devices = response.getBody();

            if (devices == null || devices.length == 0) {
                return sessionMap; // Return empty map if no devices found
            }

            for (DeviceDTO device : devices) {
                String neId = device.getNeId();
                String sessionId = UUID.randomUUID().toString();

                // Store session ID in sessionService
                sessionService.storeSession(neId, sessionId);

                // Add to response map
                sessionMap.put(neId, sessionId);

                System.out.println("Logged in Device: " + neId + 
                        " | Session ID: " + sessionId);
            }
        } catch (Exception e) {
            System.err.println("Error calling Configuration API: " + e.getMessage());
        }
        return sessionMap;
    }
}