package com.example.sbi.service;

import com.example.sbi.entity.SessionEntity;
import com.example.sbi.repository.SessionRepository;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

@Service
public class SessionService {

    @Autowired
    private SessionRepository repository;

    public void storeSession(String neId, String ipAddress, String sessionId) {
        String key = neId + "|" + ipAddress;
        repository.save(new SessionEntity(key, sessionId));
    }
}