package com.example.session1.service;

import java.util.UUID;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import com.example.session1.entity.SessionEntity;
import com.example.session1.repository.SessionRepository;

@Service
public class SessionService {

    @Autowired
    private SessionRepository sessionRepository;

    public boolean login(String neId, String ipAddress) {
        try {
            String key = neId + "|" + ipAddress;
            String sessionId = UUID.randomUUID().toString();

            SessionEntity session = new SessionEntity(key, sessionId);
            sessionRepository.save(session);

            return true;
        } catch (Exception e) {
            return false;
        }
    }
}